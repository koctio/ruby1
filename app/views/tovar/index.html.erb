<h1>На сегодня</h1>

<table border="1">
  <% @tovars.each do |tovar| %>
    <tr <% if tovar.hidden %>style="color:grey;"<% end %> >
      <td><%=tovar.name %></td>
      <td><%=tovar.article %></td>
      <td><%=tovar.comment %></td>
      <td><%=tovar.created_at %></td>
      <td><%=tovar.updated_at %></td>
      
      <td><%#= link_to 'Подр.', controller:'tovar', action:'show' %></td>
      <td><%#= link_to 'show', "tovar/#{tovar.id}" %></td>
      
      <td><%= link_to 'show', tovar_path(tovar) %></td>
      <td><%= link_to 'edit', edit_tovar_path(tovar) %></td>
      <td><%=link_to 'destroy', tovar_path(tovar), method: :delete %></td>
      <td><%=tovar.hidden %></td>
    </tr>
  <% end %>
</table>
<p><%=link_to 'add', new_tovar_path %></p>
<p><%=link_to 'clear', purge_tovar_index_path %></p>